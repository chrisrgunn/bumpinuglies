<p id="notice"><%= notice %></p>

<h1>Events</h1>

<div class="media">
     <div class="media-body">

<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Location</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.date %></td>
        <td><%= event.location %></td>
        <td><%= event.details %></td>
        <td><%= image_tag event.image.url(:medium) %></td>
        <td><%= link_to 'Show', event, class: 'btn btn-mini' %></td>
        <td><%= link_to 'Edit', edit_event_path(event), class: 'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Destroy', event, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>

<br>

<%= link_to 'New Event', new_event_path %>
