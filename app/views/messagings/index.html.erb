<div class="row">
<p id="notice"><%= notice %></p>
  <h1>Public Messages</h1>
  <div class="pull-right range-query">
    <%= form_tag messagings_path, method: :get do %>
      <%= text_field_tag 'search[date_from]',@search.date_from %>

      <%= text_field_tag 'search[date_to]', @search.date_to%>
      <%= submit_tag 'Search', class: 'btn search-button' %>
     <% end %>
  </div>
 </div>
<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Date</th>
          <th>Receiver</th>
          <th>Sender</th>
          <th>Message</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @messagings.each do |messaging| %>
          <tr>
            <td><%= messaging.date.strftime("%Y/%m/%d") %></td>
            <td><%= messaging.receiver %></td>
            <td><%= messaging.sender %></td>
            <td><%= image_tag messaging.image.url(:medium) %></td>
            <td><%= messaging.message %></td>
            <td><%= link_to 'Show', messaging, class: 'btn-mini btn' %></td>
            <td><%= link_to 'Edit', edit_messaging_path(messaging), class: 'btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', messaging, method: :delete, class: 'btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'New Messaging', new_messaging_path %>
